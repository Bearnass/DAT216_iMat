<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="MenuBar" prefHeight="80.0" prefWidth="1400.0" styleClass="MenuBar" stylesheets="@HeaderStyle.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MenuBarController">
   <children>
      <Button fx:id="menuBarFavouriteButton" layoutX="340.0" layoutY="16.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="170.0" text="Mina favoritvaror" onAction="#showFavourites">
         <graphic>
            <ImageView fx:id="menuBarFavouriteImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/icons8-heart-30.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="menuBarAccountButton" layoutX="1276.0" layoutY="16.0" mnemonicParsing="false" text="Logga in" onAction="#logIn">
         <graphic>
            <ImageView fx:id="menuBarAccountImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/icons8-person-64.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    <Button fx:id="menuBarServiceButton" layoutX="1143.0" layoutY="16.0" mnemonicParsing="false" prefHeight="26.0" text="Kundtjänst" onAction="#showCustomerService">
         <graphic>
            <ImageView fx:id="menuBarServiceImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/icons8-headphone-58.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="menuBarPurchaseButton" layoutX="560.0" layoutY="16.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="137.0" text="Tidigare Inköp" onAction="#showPreviousPurchases">
         <graphic>
            <ImageView fx:id="menuBarPurchaseImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/icons8-basket-30.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
    <Button fx:id="menuBarHomeButton" layoutX="25.0" layoutY="16.0" mnemonicParsing="false" text="Hem" onAction="#showHomepage">
         <graphic>
            <ImageView fx:id="menuBarHomeImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@imgs/icons8-house-50.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="menuBarSaleButton" layoutX="155.0" layoutY="16.0" mnemonicParsing="false" text="Erbjudanden" onAction="#showOffers">
         <graphic>
            <ImageView fx:id="menuBarSaleImageView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
